from fastapi import FastAPI, Request, Response
app = FastAPI () # create the app object
@app.post ('/match') # define the endpoint URL and method
async def match (request: Request, response: Response):
  keyword = request.json ['keyword'] # get the keyword from the request json
  matches = match_keyword (keyword) # call the match_keyword function
  response.json (matches) # return the matches as a response json


if __name__ == '__main__':
  uvicorn.run (app, host='127.0.0.1', port=8000) # run the app on localhost


curl -X POST -H "Content-Type: application/json" -d '{"keyword": "book a flight"}' http://127.0.0.1:8000/match
